# For LOCAL DEVELOPMENT: Uses defaults, no .env file needed!
# For PRODUCTION: Copy this file and set real values.

# Local Docker MongoDB (docker-compose.dev.yml / docker-compose.yml)
# These have defaults - only set if you want to customize
MONGO_ROOT_USER=root
MONGO_ROOT_PASSWORD=password

# Mongo Express UI (http://localhost:8081)
ME_BASICAUTH_ENABLED=true
ME_BASICAUTH_USER=admin
ME_BASICAUTH_PASSWORD=admin

# Production Only (docker-compose.prod.yml)
# External database (MongoDB Atlas, DocumentDB, etc.)
DATABASE_URL=mongodb+srv://user:password@cluster.mongodb.net/stashit

# Authentication (generate: openssl rand -base64 32)
JWT_SECRET=

# ChromaDB
CHROMA_TENANT=
CHROMA_DATABASE=
CHROMA_API_KEY=

# OpenAI
OPENAI_API_KEY=

# URLs
CORS_ORIGIN=https://app.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
